
<div class="container mt-4">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors", obj: @article %>
      <%= form_with(model: @article, id: "form", class: "shadow p-3 mb-3 bg-warning rounded text-light", local: true) do |f| %>
        <div class="form-group row">  
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-laber" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Content" %>
          </div> 
        </div>
       
        <div class="form-group row form-check form-check-inline">
          <%= f.label :categories, class: "col-2 col-form-laber" %>
          <div class="col-10">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <% cb.label(class: "form-check-label mb-2") {cb.check_box(class: "form-check-input ml-4") + cb.text} %>
            <% end %>
          </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="row justify-content-center">
    <%= link_to "[ Cancel ]", articles_path, class: " text-info text-decoration-none" %>
  </div>
</div>

