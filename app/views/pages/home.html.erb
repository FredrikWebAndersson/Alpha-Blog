<!-- home page bootstrap jumbotron, -->
<div class="container mt-5" id="home-container">
  <div class="jumbotron text-center">
    <% if logged_in? %>
      <h1 class="display-4">Welcome <%= current_user.username %> </h1>
      <p class="lead">Start sharing your journey of learning to code.</p>
      <%= link_to "Publish a new article!", new_article_path, class: "btn btn-danger btn-lg" %>
    <% else %>
    <h1 class="display-4">Welcome to the Alpha Blog</h1>
    <p class="lead">Start sharing your journey of learning to code.</p>
    <p>Join to tell us your coding progress, read other blog articles from other people and interact with your friends from the Alpha Blog community.</p>
    <%= link_to "Sign Up!", signup_path, class: "btn btn-danger btn-lg" %>
    <% end %>
  </div>
</div> 