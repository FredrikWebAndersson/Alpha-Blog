<h1 class="text-center mt-4"><%= @user.username %>'s profile</h1>

<%= gravatar_for @user, size: 200 %>

<div class="text-center mt-4">
  <% if logged_in? && current_user == @user %>
    <%= link_to "Edit your profile", edit_user_path(@user), class: "btn btn-outline-dark" %>
  <% end %>
  <% if logged_in? and current_user.admin? %>
    <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-outline-dark" %>
    <%= link_to "Delete User", user_path(@user), class: "btn btn-outline-danger", method: :delete, data: { confirm: "Are you sure you want to delete this profile and all their articles?" } %>
  <% end %>
</div>

<h4 class="text-center mt-4">Articles</h4>

<div class="flickr_pagination">
  <%= will_paginate @articles, :container => false %>
</div>

<%= render "articles/articles", obj: @articles %>

